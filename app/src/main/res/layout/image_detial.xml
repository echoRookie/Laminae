<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/image_detial_colltoobar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@color/aplahTransparent"
            >

            <ImageView
                android:id="@+id/header_image_background"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"/>

            <android.support.v7.widget.Toolbar
                android:layout_height="120dp"
                android:id="@+id/user_toolbar"
                android:layout_width="match_parent"
                tools:title="鱼鱼鱼三条鱼i"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/image_detial_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingTop="32dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_margin_left"
                android:paddingRight="@dimen/activity_margin_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/image_detial_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="图片的文字描述内容"/>
                <TextView
                    android:id="@+id/image_detial_link"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/image_detial_title"
                    android:text="图片的链接"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/image_detial_like"
                    android:text="喜欢"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/image_detial_link"
                    />
                <TextView
                    android:id="@+id/image_detial_pin"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/image_detial_link"
                    android:layout_toLeftOf="@id/image_detial_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采集"
                    android:layout_marginRight="16dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent">
            </View>
            <RelativeLayout
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_detial_usericon"
                    android:layout_marginRight="32dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_back_day" />
                <TextView
                    android:padding="8dp"
                    android:textSize="16dp"
                    android:background="@drawable/text_view_background"
                    android:layout_centerVertical="true"
                    android:id="@+id/image_detial_username"
                    android:layout_toRightOf="@id/image_detial_usericon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yuyuyyu"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:text="用户"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent">
            </View>
            <RelativeLayout
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="0.5dp"
                        android:layout_marginBottom="0.5dp"
                        android:id="@+id/image_detial_board_cover_one"
                        android:background="@drawable/header_back_night"
                        android:scaleType="centerCrop"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <ImageView
                        android:layout_marginRight="0.5dp"
                        android:id="@+id/image_detial_board_cover_two"
                        android:background="@drawable/header_back_night"
                        android:scaleType="centerCrop"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_below="@id/image_detial_board_cover_one"/>
                    <ImageView
                        android:layout_marginBottom="0.5dp"
                        android:layout_toRightOf="@id/image_detial_board_cover_one"
                        android:id="@+id/image_detial_board_cover_three"
                        android:background="@drawable/header_back_night"
                        android:scaleType="centerCrop"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <ImageView
                        android:layout_below="@id/image_detial_board_cover_three"
                        android:layout_toRightOf="@id/image_detial_board_cover_two"
                        android:id="@+id/image_detial_board_cover_four"
                        android:background="@drawable/header_back_night"
                        android:scaleType="centerCrop"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <TextView
                        android:textSize="16dp"
                        android:padding="8dp"
                        android:background="@drawable/text_view_background"
                        android:id="@+id/image_detial_board"
                        android:layout_marginLeft="32dp"
                        android:layout_toRightOf="@id/image_detial_board_cover_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="被采集到画板"/>
                    <TextView
                        android:padding="8dp"
                        android:textSize="16dp"
                        android:background="@drawable/text_view_background"
                        android:layout_marginTop="8dp"
                        android:text="haha"
                        android:layout_below="@id/image_detial_board"
                        android:layout_toRightOf="@id/image_detial_board_cover_four"
                        android:id="@+id/image_detial_board_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:text="画板"
                        android:layout_marginRight="36dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent">
            </View>
            <TextView
                android:layout_margin="8dp"
                android:text="推荐采集"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/image_detial_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/image_detial_floatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/image_detial_colltoobar"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />

</android.support.design.widget.CoordinatorLayout>