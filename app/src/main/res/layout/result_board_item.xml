<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="6dp"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/result_board_cover"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_alignBottom="@id/result_board_cover"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:ellipsize="end"
                android:lines="1"
                android:layout_margin="8dp"
                android:id="@+id/result_board_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=" 哈哈哈哈 画板"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:text="来自"
                android:layout_height="wrap_content" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/result_board_usericon"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:ellipsize="end"
                android:lines="1"
                android:id="@+id/result_board_username"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                tools:text="yuyuyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="16dp"
                android:id="@+id/result_board_follow"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="喜欢 0 转采 0" />
            <TextView
                android:id="@+id/result_board_flag"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"/>
        </RelativeLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>



