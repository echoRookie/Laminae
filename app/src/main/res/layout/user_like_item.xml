<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="6dp"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_like_cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">
            <TextView
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/user_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize = "end"
                android:lines="2"
                tools:text="测试"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_alignBottom="@id/user_board_cover"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50sp">

            <TextView
                android:layout_marginBottom="8dp"
                android:id="@+id/user_like_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="来自 哈哈哈哈 画板"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/user_like_follow"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="喜欢 0 转采 0" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:text="来自"
                android:layout_height="wrap_content" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_like_usericon"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:ellipsize="end"
                android:lines="1"
                android:id="@+id/user_like_username"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                tools:text="yuyuyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>





    </LinearLayout>

</android.support.v7.widget.CardView>



